<% include partials/header%>
    <div class="ui main text container segment">
        <div class="ui huge header"><%=post.title%></div>
        <div class="ui top attached">
            <div class="item">
                <img class="ui centered rounded image" src="<%=post.image%>" >
                <div class="content">
                    <span>Created in : <%=post.create.toDateString()%></span>
                    <p><%-post.body%></p>
                </div>
                <div>
                    <a href="/posts/<%=post._id%>/edit" class="ui green inverted button">Edit Post</a>
                    <form id="delete" action="/posts/<%=post._id%>?_method=DELETE" method="POST">
                            <button class="ui red inverted button">Delete Post</button>
                    </form>
                </div>
            </div>
        </div>
        
    </div>    

<% include partials/footer%>